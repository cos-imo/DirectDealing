<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.collections.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="eu.telecomnancy.labfx.Controller.CalendrierController">
    <children>
        <VBox alignment="TOP_CENTER" spacing="10.0">
            <fx:include source="Header.fxml" VBox.vgrow="NEVER"/>
            <HBox alignment="CENTER" spacing="10">
                <Button fx:id="previousMonthButton" text="⬅" onAction="#previousMonth" style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-font-size: 24px;">
                    <tooltip>
                        <Tooltip text="Mois précédent" />
                    </tooltip>
                </Button>
                <StackPane fx:id="monthStackPane" alignment="CENTER">
                    <Label fx:id="monthLabel" text="Mois" style="-fx-font-size: 24px;" onMouseClicked="#showMonthPicker"/>
                    <ComboBox fx:id="monthPicker" onAction="#handleMonthPicker" visible="false"/>
                </StackPane>
                <StackPane>
                    <Label fx:id="yearLabel" text="Année" style="-fx-font-size: 24px;" onMouseClicked="#showYearPicker"/>
                    <ComboBox fx:id="yearPicker" visible="false" onAction="#handleYearPicker"/>
                </StackPane>
                <Button fx:id="currentMonthButton" text="•" onAction="#currentMonth" style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-font-size: 24px;">
                    <tooltip>
                        <Tooltip text="Date actuelle" />
                    </tooltip>
                </Button>
                <Button fx:id="nextMonthButton" text="➡" onAction="#nextMonth" style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-font-size: 24px;">
                    <tooltip>
                        <Tooltip text="Mois suivant" />
                    </tooltip>
                </Button>
            </HBox>
            <GridPane fx:id="calendarGrid" alignment="CENTER" hgap="2" vgap="2" VBox.vgrow="ALWAYS">
                <padding>
                    <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
                </padding>
                <columnConstraints>
                    <ColumnConstraints minWidth="10.0" prefWidth="100.0" hgrow="SOMETIMES"/>
                    <ColumnConstraints minWidth="10.0" prefWidth="100.0" hgrow="SOMETIMES"/>
                    <ColumnConstraints minWidth="10.0" prefWidth="100.0" hgrow="SOMETIMES"/>
                    <ColumnConstraints minWidth="10.0" prefWidth="100.0" hgrow="SOMETIMES"/>
                    <ColumnConstraints minWidth="10.0" prefWidth="100.0" hgrow="SOMETIMES"/>
                    <ColumnConstraints minWidth="10.0" prefWidth="100.0" hgrow="SOMETIMES"/>
                    <ColumnConstraints minWidth="10.0" prefWidth="100.0" hgrow="SOMETIMES"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="80.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="80.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="80.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="80.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="80.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="80.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="80.0" vgrow="SOMETIMES"/>

                </rowConstraints>
            </GridPane>
        </VBox>
    </children>
</AnchorPane>
