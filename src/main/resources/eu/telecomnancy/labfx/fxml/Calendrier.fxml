<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="eu.telecomnancy.labfx.Controller.CalendrierController">
    <children>
        <VBox alignment="TOP_CENTER" spacing="10.0">
            <fx:include source="Header.fxml" VBox.vgrow="NEVER"/>
            <HBox alignment="CENTER" spacing="10">
                <Button fx:id="previousMonthButton" text="Mois précédent" onAction="#previousMonth"/>
                <Label fx:id="monthYearLabel" text="Mois Année" style="-fx-font-size: 24px;"/>
                <Button fx:id="currentMonthButton" text="•" onAction="#currentMonth"/>
                <Button fx:id="nextMonthButton" text="Mois suivant" onAction="#nextMonth"/>
            </HBox>
            <GridPane fx:id="calendarGrid" alignment="CENTER" hgap="10.0" vgap="10.0" VBox.vgrow="ALWAYS">
                <padding>
                    <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
                </padding>
                <columnConstraints>
                    <ColumnConstraints minWidth="10.0" prefWidth="100.0" hgrow="SOMETIMES"/>
                    <ColumnConstraints minWidth="10.0" prefWidth="100.0" hgrow="SOMETIMES"/>
                    <ColumnConstraints minWidth="10.0" prefWidth="100.0" hgrow="SOMETIMES"/>
                    <ColumnConstraints minWidth="10.0" prefWidth="100.0" hgrow="SOMETIMES"/>
                    <ColumnConstraints minWidth="10.0" prefWidth="100.0" hgrow="SOMETIMES"/>
                    <ColumnConstraints minWidth="10.0" prefWidth="100.0" hgrow="SOMETIMES"/>
                    <ColumnConstraints minWidth="10.0" prefWidth="100.0" hgrow="SOMETIMES"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                </rowConstraints>
                <!-- En-têtes des jours de la semaine -->
                <Label text="Lundi" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <Label text="Mardi" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Label text="Mercredi" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                <Label text="Jeudi" GridPane.columnIndex="3" GridPane.rowIndex="1" />
                <Label text="Vendredi" GridPane.columnIndex="4" GridPane.rowIndex="1" />
                <Label text="Samedi" GridPane.columnIndex="5" GridPane.rowIndex="1" />
                <Label text="Dimanche" GridPane.columnIndex="6" GridPane.rowIndex="1" />
                <!-- Les jours du calendrier seront ajoutés ici dynamiquement dans le contrôleur -->
            </GridPane>
        </VBox>
    </children>
</AnchorPane>
