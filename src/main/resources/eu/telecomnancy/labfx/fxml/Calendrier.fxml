<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="eu.telecomnancy.labfx.Controller.CalendrierController">
    <children>
        <BorderPane prefHeight="200.0" prefWidth="200.0">
            <top>
                <HBox prefHeight="100.0" prefWidth="1080.0" BorderPane.alignment="CENTER"> 
                    <fx:include source="Header.fxml"/> 
                </HBox>
            </top>
            <center>
                <VBox alignment="CENTER" spacing="10">
                    <Label fx:id="monthLabel" text="Mois" />
                    <GridPane fx:id="calendarGrid" vgap="10" hgap="10">
                        <!-- Les jours du calendrier seront ajoutÃ©s ici dynamiquement -->
                    </GridPane>
                </VBox>
            </center>
        </BorderPane>
    </children>
</AnchorPane>
